<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scorelive">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.PremierLeague">
        <activity
            android:name="com.example.scorelive.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.scorelive.TeamDetailsActivity"
            android:label="@string/title_activity_team_details"
            android:theme="@style/Theme.PremierLeague.NoActionBar"/>
        <activity
            android:name="com.example.scorelive.EventDetailsActivity"
            android:label="@string/title_activity_event_details"
            android:theme="@style/Theme.PremierLeague.NoActionBar"/>
    </application>

</manifest>